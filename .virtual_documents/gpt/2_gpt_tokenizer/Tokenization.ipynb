vocab_size = 276 # desired final vocab_size
num_merges = vocab_size - 256
ids = list(tokens)

merges = {} # (int, int) --> int
for i in range(num_merges):
    stats = get_stats(ids)
    pair = max(stats, key=stats.get)
    idx = 256 + i
    print(f"Merging pair {pair} into new token {idx}")
    ids = merge(ids, pair, idx)
    merges[pair] = idx


